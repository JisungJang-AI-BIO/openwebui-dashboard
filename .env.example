# PostgreSQL and Open WebUI Configuration
# Copy this file to .env and update values accordingly
# SECURITY WARNING: Never commit the .env file to version control.

# Database Configuration
POSTGRES_DB=openwebui
POSTGRES_USER=openwebui_admin
POSTGRES_PASSWORD=PLEASE_CHANGE_ME_TO_A_STRONG_PASSWORD
POSTGRES_HOST=postgres

# Ports Configuration (Single Source of Truth)
# -------------------------------------------
# Postgres: 5432(Internal) -> 5435(Host/WSL)
POSTGRES_PORT_INTERNAL=5432
POSTGRES_PORT_HOST=5435

# Backend: 8000(Internal) -> 8005(Host/WSL)
BACKEND_PORT_INTERNAL=8000
BACKEND_PORT_HOST=8005

# Frontend: 5173(Internal) -> 3005(Host/WSL)
FRONTEND_PORT_INTERNAL=5173
FRONTEND_PORT_HOST=3005

# Auth Configuration
# "mock" for local dev (uses X-Auth-User header), "sso" for production (Keycloak OIDC)
AUTH_MODE=mock
ADMIN_USERS=jisung.jang
